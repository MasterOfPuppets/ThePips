<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_checked="true" >
    <shape>
      <gradient
          android:startColor="#292929"
          android:endColor="#333333"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#4575A7" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#292929"
          android:endColor="#292929"
          android:angle="270" />
